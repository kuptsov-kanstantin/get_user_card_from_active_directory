<Window x:Class="USer_card.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="224" Width="525">
    <Grid>
        <Button Content="Распечатка карточки пользователя" Height="23" HorizontalAlignment="Right" Margin="0,120,9,0" x:Name="button2" VerticalAlignment="Top" Width="221" Click="button2_Click" />
